{
    "name": "Symmetric Encryption Development Configuration",
    "dockerComposeFile": [
        // "../docker-compose.yml",
        "docker-compose.yml"
    ],
    "service": "rechnungsstellung",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",
    "remoteUser": "gitpod",
    // "onCreateCommand": "bash -i -c '.devcontainer/persist_reload/setup.sh'",
    // "updateContentCommand": "bash -i -c 'mix do deps.get, compile && MIX_ENV=test mix compile'",
    "extensions": [
        "JakeBecker.elixir-ls",
        "pantajoe.vscode-elixir-credo",
        "ms-azuretools.vscode-docker",
        "me-dutour-mathieu.vscode-github-actions",
        "eamodio.gitlens"
    ],
    "settings": {
        "files.autoSave": "onFocusChange",
        "editor.formatOnSave": true,
        "gitlens": {
            "showWelcomeOnInstall": false,
            "showWhatsNewAfterUpgrades": false
        },
        "elixir.credo.executePath": "/home/gitpod/.asdf/shims"
    }
}